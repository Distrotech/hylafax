Package: hylafax
Architecture: any
Section: comm
Depends: ${shlibs:Depends}, ${misc:Depends}, libtiff-tools (>= 3.6.1-3), mailx, psmisc, sed (>= 4.1.2), sharutils, adduser, lsb-base (>= 3.0-6), metamail, enscript | libgnomeprint-data, ucf, gsfonts, gs-esp

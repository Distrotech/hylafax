DEPTH=../..

@MAKEINCLUDE@ @MAKELQUOTE@${DEPTH}/defs@MAKERQUOTE@

SRCDIR	= ${DEPTH}/${TOPSRCDIR}/html/tools
VPATH	= ../../@SRCDIR@/html/tools

CGIBIN=	@CGIDIR@

CFILES=\
	man2html.c	\
	unquote.c	\
	${NULL}
TARGETS=\
	unquote		\
	man2html	\
	manpage.sh	\
	faxsurvey.sh	\
	${NULL}

default all::
	@${MAKE} incdepend
	@${MAKE} targets
	
targets: ${TARGETS}

@MAKEINCLUDE@ @MAKELQUOTE@${COMMONRULES}@MAKERQUOTE@

man2html: ${SRCDIR}/man2html.c ${LIBS}
	${CCF} -o man2html ${SRCDIR}/man2html.c ${LDFLAGS}
unquote: ${SRCDIR}/unquote.c ${LIBS}
	${CCF} -o unquote ${SRCDIR}/unquote.c ${LDFLAGS}

PUTBIN=${INSTALL} -F ${CGIBIN} -idb ${PRODUCT}.html.cgi

#
# NB: the scripts are mode 555 'cuz certain servers
#     require they be readable; sigh.
#
install: default
	${INSTALL} -u ${SYSUSER} -g ${SYSGROUP} -m ${DIRMODE} \
	    -idb hylafax.html.cgi -dir ${CGIBIN}
	${PUTBIN} -m 555 -O man2html unquote
	${PUTBIN} -m 555 -O -src manpage.sh -idb "config(suggest)" manpage
	${PUTBIN} -m 555 -O -src faxsurvey.sh faxsurvey
